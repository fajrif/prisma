<section class="half-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-lg-8 d-flex justify-content-center align-items-center order-2 order-md-1 wow animate__fadeInLeft" data-wow-delay="0.1s">
        <div class="w-95 sm-w-100 text-center text-md-start">
          <div class="title-small font-weight-700 last-paragraph-no-margin margin-20px-bottom sm-margin-10px-bottom">
            <%= raw @portfolio.short_description %>
          </div>
          <div class="last-paragraph-no-margin margin-25px-bottom">
            <%= raw @portfolio.description %>
          </div>
          <p class="mb-2"><strong><%= t('portfolios.media_used') %>:</strong> <%= blank_or_not @portfolio.media_used %></p>
          <p class="mb-0"><strong><%= t('portfolios.collaborators') %>:</strong> <%= blank_or_not @portfolio.collaborators %></p>
        </div>
      </div>
      <div class="col-12 col-lg-4 d-flex justify-content-center align-items-center order-1 order-md-2 sm-margin-20px-bottom wow animate__fadeIn" data-wow-delay="0.3s">
        <%= image_tag(@portfolio.logo) if @portfolio.logo.attached? %>
      </div>
    </div>
  </div>
</section>
