<% if banner = @banners.first %>
  <%= render partial: "pages/banner", locals: { banner: banner } %>
<% end %>

<% unless @portfolios.empty? %>
  <section id="portfolios-section">
    <div class="container">
      <div class="row">
        <div class="col-12 blog-content">
          <ul class="blog-classic blog-wrapper grid grid-loading grid-3col xl-grid-3col lg-grid-3col md-grid-2col sm-grid-2col xs-grid-1col gutter-large">
            <li class="grid-sizer"></li>
            <% @portfolios.each do |portfolio| %>
              <!-- start post item -->
              <li class="grid-item last-paragraph-no-margin wow animate__fadeInUp">
                <div class="blog-post blog-post-style1 text-start">
                  <div class="blog-post-images overflow-hidden margin-25px-bottom md-margin-20px-bottom border-radius-8">
                    <a href="<%= portfolio_path(portfolio) %>">
                      <%= image_tag portfolio.image, alt: portfolio.name %>
                    </a>
                  </div>
                  <div class="post-details margin-20px-bottom w-95">
                    <div class="mb-4">
                      <% if portfolio.service %>
                        <span class="btn btn-medium btn-rounded btn-border btn-prisma sm-margin-10px-bottom"><%= portfolio.try(:service).try(:name) %></span>
                      <% end %>
                      <% if portfolio.industry %>
                        <span class="btn btn-medium btn-rounded btn-border btn-prisma"><%= portfolio.try(:industry).try(:name) %></span>
                      <% end %>
                    </div>
                    <a href="<%= portfolio_path(portfolio) %>" class="post-title font-weight-600 text-extra-large text-black text-uppercase d-block margin-10px-bottom sm-margin-5px-bottom"><%= portfolio.name %></a>
                    <span class="post-author text-black d-block margin-15px-bottom"><%= raw portfolio.short_description %></span>
                  </div>
                </div>
              </li>
              <!-- end post item -->
            <% end %>
          </ul>
          <!-- pagination -->
          <div class="text-center margin-50px-tb sm-margin-30px-tb">
            <%= paginate @portfolios, theme: :pofo %>
          </div>
          <!-- end pagination -->
        </div>
      </div>
    </div>
  </section>
<% end %>
<%= render "shared/our_services_second" %>
<%= render "shared/blogs" %>
<%= render "shared/testimonials" %>
<%= render "shared/our_industries" %>
