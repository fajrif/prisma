<%- load_header_menu -%>
<!-- start header -->
<header>
	<!-- start navigation -->
	<nav class="navbar navbar-default bootsnav navbar-fixed-top header-light background-transparent white-link navbar-expand-lg">
		<div class="container nav-header-container">
			<div class="col-auto ps-0">
				<div class="btn-group dropdown-style-1 <%= @banner_text_color %>">
					<button type="button" class="btn text-uppercase dropdown-toggle sm-w-100" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<% if I18n.locale == :en %>
							EN
						<% elsif I18n.locale == :id %>
							ID
						<% end %>
					</button>
					<%= get_locale_current_page_route %>
				</div>
			</div>
			<div class="col-auto col-lg order-2 order-md-1 accordion-menu ps-0">
				<button type="button" class="navbar-toggler collapsed" data-bs-toggle="collapse" data-bs-target="#navbar-collapse-toggle-1">
					<span class="sr-only">toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<div class="navbar-collapse collapse justify-content-start" id="navbar-collapse-toggle-1">
					<ul class="nav navbar-nav alt-font font-weight-700">
						<%= raw generate_navbar_menu(@header_menu) %>
					</ul>
				</div>
			</div>
			<!-- start logo -->
			<div class="col-auto order-1 order-md-2 ps-0">
				<%= link_to root_path, class: "logo" do %>
					<%= image_tag("logo2.png", class: get_default_logo("logo-dark"), alt: "Indo Energy Corporation") %>
					<%= image_tag("logo.png", class: get_default_logo("logo-light"), alt: "Indo Energy Corporation") %>
				<% end %>
			</div>
			<!-- end logo -->
		</div>
	</nav>
	<!-- end navigation -->
</header>
<!-- end header -->
