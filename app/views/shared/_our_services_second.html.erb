<%- services = Service.all %>
<% unless services.empty? %>
  <section class="bg-gradient-purple">
    <div class="container">
      <div class="row justify-content-start align-items-center text-center text-md-start margin-40px-bottom wow animate__fadeIn">
        <div class="col-12 col-lg-7 text-white-2">
          <h5 class="font-weight-600"><%= t('services.recommendation.title') %></h5>
          <div class="mb-3 w-80 sm-w-100"><%= t('services.recommendation.desc') %></div>
        </div>
        <div class="col-12 col-lg-5 text-center text-md-end">
          <%= link_to services_path, class: "btn btn-medium btn-rounded btn-border btn-transparent-prisma" do %>
            <%= t('global.view_all') %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="swiper swiper-pagination-bottom" data-slider-options='{ "slidesPerView": "1", "allowTouchMove":true, "loop":false, "spaceBetween": 30, "autoplay": false, "keyboard": { "enabled": true, "onlyInViewport": true }, "navigation": { "nextEl": ".swiper-button-next-1", "prevEl": ".swiper-button-prev-1" }, "breakpoints": { "992": { "slidesPerView": 3 }, "768": { "slidesPerView": 2 } }, "pagination": { "el": ".swiper-pagination", "clickable": true } }'>
              <div class="swiper-wrapper margin-25px-bottom">
                <% services.each do |service| %>
                  <!-- start testimonial item -->
                  <div class="swiper-slide">
                    <div class="d-flex flex-column justify-content-between transparent-box-solid text-white-2 border border-white border-radius-8 padding-five-all position-relative h-250px">
                      <div>
                        <div class="d-flex align-items-center gap-4 mb-4">
                          <%= image_tag service.image_white, style: "max-height:50px;", alt: service.name if service.image_white.attached? %>
                          <div class="text-large text-black margin-5px-bottom alt-font font-weight-600"><%= service.name %></div>
                        </div>
                        <p class="font-weight-400"><%= service.short_description %></p>
                      </div>
                      <a class="text-white-2 font-weight-400" href="<%= service_url(service) %>">Explore</a>
                    </div>
                  </div>
                  <!-- end testimonial item -->
                <% end %>
              </div>
              <div class="swiper-pagination position-relative margin-20px-top"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

