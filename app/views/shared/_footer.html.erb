<% unless is_contact_page? or is_careers_page? %>
<!-- start contact form -->
<section id="contact-form-section" class="wow animate__fadeIn p-0 cover-background" style="background-image:url('<%= image_url('bg-contact.png') %>');background-position:top left !important;">
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-lg-2">
      <div class="col last-paragraph-no-margin sm-margin-30px-bottom md-h-450px sm-h-350px text-white-2 padding-six-lr padding-five-half-tb lg-padding-four-lr md-padding-ten-half-tb md-padding-twelve-half-lr sm-padding-15px-lr">
        <h3 class="font-weight-600"><%= t('contacts.title') %></h3>
        <p><%= t('contacts.short_description') %></p>
        <p><%= t('contacts.instructions') %></p>
      </div>
      <div id="inquiryForm" class="col padding-three-all lg-padding-two-all sm-padding-15px-all">
        <%= render "inquiries/form" %>
      </div>
    </div>
  </div>
</section>
<!-- end contact form -->
<% end %>

<%- load_footer_menu -%>
<!-- start footer -->
<footer class="footer-modern-dark bg-dark-blue text-white-2 padding-three-top sm-padding-30px-top">
	<div class="footer-widget-area padding-40px-bottom sm-padding-30px-bottom">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-md-6 text-center text-md-start">
					<%= link_to root_url, class: "margin-20px-bottom sm-margin-40px-bottom d-inline-block" do %>
						<%= image_tag("logo.png", class: "footer-logo", alt: "Prisma Ads") %>
					<% end %>
				</div>
        <div class="col-md-6 text-center text-md-end">
					<div class="social-icon-style-8 d-inline-block align-middle">
						<ul class="large-icon mb-0">
							<li><a class="instagram text-white-2" href="<%= configatron.social_instagram_url %>" target="_blank"><i class="fa-brands fa-instagram no-margin-right"></i></a></li>
							<li><a class="linkedin text-white-2" href="<%= configatron.social_linkedin_url %>" target="_blank"><i class="fa-brands fa-linkedin"></i></a></li>
							<li><a class="youtube text-white-2" href="<%= configatron.social_youtube_url %>" target="_blank"><i class="fa-brands fa-youtube"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row align-items-start">
        <div class="col-6 col-lg-3 text-center text-md-start sm-margin-20px-bottom">
          <%- if adr = Address.first -%>
            <h6 class="text-uppercase margin-20px-bottom"><%= adr.name %></h6>
            <p class="d-block text-medium"><%= raw adr.complete_address %></p>
            <span class="d-block text-medium mt-2 mb-4"><%= link_to adr.email1, "mailto:#{adr.email1}", class: "text-white-2" %></span>
            <span class="d-block text-medium"><%= link_to "#{adr.phone1} (Hunting)", "tel:#{adr.phone1}", class: "text-white-2" %></span>
            <span class="d-block text-medium"><%= link_to adr.phone2, "tel:#{adr.phone2}", class: "text-white-2" %></span>
          <% end %>
        </div>
				<!-- start links -->
        <div class="col-6 col-lg-3 padding-four-lr text-center text-md-start sm-margin-20px-bottom">
          <h6 class="text-uppercase margin-20px-bottom"><%= t('footer.title.our_services') %></h6>
          <ul class="text-medium p-0 mb-0 list-unstyled">
            <%- @services = Service.all -%>
            <% @services.each do |service| %>
              <li class="margin-10px-bottom"><%= link_to service.name, service_path(service), class: "text-white-2" %></li>
            <% end %>
          </ul>
				</div>
				<!-- end links -->
				<!-- start links -->
        <div class="col-6 col-lg-3 padding-four-lr text-center text-md-start sm-margin-20px-bottom">
          <h6 class="text-uppercase margin-20px-bottom"><%= t('footer.title.company') %></h6>
          <ul class="text-medium p-0 mb-0 list-unstyled">
            <%= raw generate_footer_link(@footer_menu) %>
          </ul>
				</div>
				<!-- end links -->
				<!-- start links -->
        <div class="col-6 col-lg-3 text-center text-md-start sm-margin-20px-bottom">
          <h6 class="text-uppercase margin-20px-bottom"><%= t('footer.title.explore') %></h6>
          <ul class="text-medium p-0 mb-0 list-unstyled">
            <li class="margin-10px-bottom"><%= link_to t('footer.explore.client_projects'), portfolios_path, class: "text-white-2" %></li>
            <li class="margin-10px-bottom"><%= link_to t('footer.explore.industries'), industries_path, class: "text-white-2" %></li>
            <li class="margin-10px-bottom"><%= link_to t('footer.explore.blogs'), articles_path, class: "text-white-2" %></li>
          </ul>
				</div>
				<!-- end links -->
			</div>
		</div>
	</div>
	<div class="container">
		<!-- start copyright -->
		<div class="footer-bottom border-top border-color-extra-medium-gray padding-20px-tb">
			<div class="row row-cols-1 row-cols-md-2 align-items-center">
				<div class="col text-uppercase text-md-start text-center text-small">&copy; 2025 Prisma Advertising</div>
        <div class="col text-md-end text-center">
          <ul class="text-small p-0 mb-0 list-unstyled">
            <li class="d-inline-block margin-10px-right"><a class="text-white-2 text-uppercase" href="#">#AffordaLux</a></li>
            <li class="d-inline-block"><a class="text-white-2 text-uppercase" href="#">#FutureOOH</a></li>
          </ul>
				</div>
			</div>
		</div>
		<!-- end copyright -->
	</div>
</footer>
<!-- end footer -->

