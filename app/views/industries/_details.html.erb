<section class="bg-image parallax" data-parallax-background-ratio="0.5" style="background-image:url('<%= image_url('bg-image-2.png') %>');">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-lg-4 md-margin-40px-bottom sm-margin-30px-bottom wow animate__fadeIn">
        <h5 class="font-weight-700 text-white-2 line-height-normal"><%= raw @industry.caption %></h5>
      </div>
      <div class="col-lg-8 wow animate__fadeIn">
        <div class="transparent-box box-embroided font-weight-500 text-medium text-white-2 last-paragraph-no-margin">
          <div class="padding-four-all">
            <%= raw @industry.description %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
