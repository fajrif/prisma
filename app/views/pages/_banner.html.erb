<!-- start page single banner -->
<% if banner.is_video? %>
<section id="<%= banner.section_id %>" class="p-0 single-banner bg-black">
<% else %>
<section id="<%= banner.section_id %>" class="p-0 single-banner bg-black parallax" data-parallax-background-ratio="0.5" style="background-image:url('<%= url_for(banner.image) if banner.image.attached? %>');">
<% end %>
  <div class="opacity-medium bg-transparent-black z-index-0"></div>
	<div class="full-screen <%= @banner_text_color %>">
		<div class="container position-relative h-100">
      <div class="row h-100 align-items-end">
				<div class="col-12 col-lg-7 col-md-7 margin-30px-bottom">
          <div class="w-90 sm-w-100">
            <h4 class="font-weight-600 text-white-2 alt-font"><%= raw banner.title %></h4>
            <div class="w-90 sm-w-100"><%= raw banner.description %></div>
            <div class="d-flex flex-column flex-md-row gap-2">
              <% banner.link_buttons.each do |link_button| %>
                <%= render_link_text_url(link_button, "btn btn-medium #{@banner_btn_color} btn-rounded") %>
              <% end %>
            </div>
          </div>
				</div>
			</div>
		</div>
	</div>
	<%- if banner.is_video? -%>
	<video class="htms-video" poster="<%= url_for(banner.image) if banner.image.attached? %>" autoplay loop muted playsinline>
		<source type="<%= banner.video.content_type %>" src="<%= url_for(banner.video) %>">
	</video>
	<%- end -%>
</section>
<!-- end page single banner -->
