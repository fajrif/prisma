                <p class="font-weight-500"><%= t('locations.bali.desc') %></p>
              </div>
            </div>
          </div>
          <!-- end features box item -->
          <!-- start features box item -->
          <div class="col-12 col-lg-4 md-margin-30px-bottom wow animate__fadeInUp" data-wow-delay="0.4s">
            <div class="cover-background h-100 text-white-2 border-bottom-radius-8" style="background: url('<%= image_url('bg3.png') %>')">
              <div class="bg-white">
                <div class="bg-black overflow-hidden location-image border-top-radius-8">
                  <a href="<%= locations_path('bandung') %>">
                    <%= image_tag('locations/bandung.png') %>
                  </a>
                </div>
              </div>
              <div class="padding-20px-all border-top border-width-2">
