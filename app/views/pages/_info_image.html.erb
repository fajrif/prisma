<%- bg_color ||= '' -%>
<%- text_color, btn_color = get_prisma_element_colors(bg_color) -%>

<%- col1 = 'col-md-6' -%>
<%- text_align = 'text-center' -%>

<%- text_width = "w-100" -%>
<%- text_width = snippet.css_title unless snippet.css_title.blank? -%>

<%- header_tag = "h3" -%>
<%- header_tag = snippet.title_tag unless snippet.title_tag.blank? -%>

<div class="container">
	<div class="row <%= "align-items-center #{text_color}" %>">
		<% if snippet.orientation == "right" %>
			<div class="<%= col1 %> order-2 order-md-1 wow animate__fadeInLeft" data-wow-delay="0.2s">
				<% unless snippet.caption.blank? %>
					<span class="d-block mb-3 text-uppercase text-caption" style="margin-left:5px;"><%= snippet.caption %></span>
				<% end %>
				<%= content_tag(header_tag.to_sym, snippet.title, class: "font-weight-600 #{text_width}") unless snippet.title.blank? %>
				<%= render "pages/info_image_desc", snippet: snippet, btn_color: btn_color %>
			</div>
			<div class="col-md-6 order-1 order-md-2 sm-margin-30px-bottom text-center wow animate__fadeInRight" data-wow-delay="0.4s">
				<%= render "pages/image_display", snippet: snippet %>
			</div>
		<% else %>
			<div class="<%= "#{col1} #{text_align}" %> sm-margin-30px-bottom wow animate__fadeInLeft" data-wow-delay="0.2s">
				<%= render "pages/image_display", snippet: snippet %>
			</div>
			<div class="col-md-6 padding-five-lr wow animate__fadeInRight" data-wow-delay="0.4s">
        <div class="d-flex flex-column justify-content-center align-items-center">
          <% unless snippet.caption.blank? %>
            <span class="d-block mb-3 text-uppercase text-caption" style="margin-left:5px;"><%= snippet.caption %></span>
          <% end %>
          <%= content_tag(header_tag.to_sym, snippet.title, class: "font-weight-600 #{text_width}") unless snippet.title.blank? %>
          <%= render "pages/info_image_desc", snippet: snippet, btn_color: btn_color %>
        </div>
			</div>
		<% end %>
	</div>
</div>
