<%- bg_color ||= '' -%>
<%- text_color, btn_color = get_prisma_element_colors('bg-green') -%>

<%- header_tag = "h4" -%>
<%- header_tag = snippet.title_tag unless snippet.title_tag.blank? -%>

<div class="container">
  <div class="row row-cols-1 row-cols-lg-2 no-margin-lr">
    <div class="col padding-40px-all text-white-2 cover-background" style="background-image:url('<%= url_for(snippet.background) %>');">
      <%= content_tag(header_tag.to_sym, snippet.title, class: "font-weight-500 w-80 sm-w-100") %>
      <div class="w-95 sm-w-100">
        <% unless snippet.short_description.blank? %>
          <div class="info_short_desc <%= snippet.css_desc %> last-paragraph-no-margin margin-30px-bottom sm-margin-15px-bottom">
            <%= raw snippet.short_description %>
          </div>
        <% end %>
        <% snippet.link_buttons.each do |link_button| %>
          <%= render_link_text_url(link_button, "btn btn-medium #{btn_color} btn-rounded margin-20px-bottom d-block w-fit-content") %>
        <% end %>
      </div>
    </div>
    <div class="col cover-background" style="background-image:url('<%= url_for(snippet.image) %>');"></div>
  </div>
</div>
