<%- text_color, btn_color = get_prisma_element_colors('bg-green') -%>

<%- header_tag = "h4" -%>
<%- header_tag = snippet.title_tag unless snippet.title_tag.blank? -%>

<% innovations = t('dooh_innovations.title') %>
<% list = t('dooh_innovations.list') %>
<div class="container">
	<div class="row justify-content-start align-items-center margin-20px-bottom wow animate__fadeIn">
    <div class="col-12 col-lg-7 <%= text_color %>">
      <%= content_tag(header_tag.to_sym, snippet.title, class: "font-weight-600") %>
			<div class="mb-3 w-80 sm-w-100"><%= raw snippet.short_description %></div>
		</div>
	</div>
  <div class="row justify-content-center">
      <div class="col-lg-12">
          <!-- start accordion -->
          <div class="panel-group accordion-event accordion-style2" id="accordion-main">
            <% innovations.each_with_index do |title, index| %>
              <!-- start tab content -->
              <div class="panel panel-default">
                  <div class="panel-heading transparent-white-box">
                      <a class="accordion-toggle" data-bs-toggle="collapse" data-bs-parent="#accordion-main" href="#innovation<%= index + 1 %>">
                          <div class="panel-title">
                              <span class="<%= text_color %> text-large font-weight-600 d-inline-block"><%= title %></span>
                              <%= image_tag("icon-innovations/icon-#{index+1}.png") %>
                          </div>
                      </a>
                  </div>
                  <div id="innovation<%= index + 1 %>" class="panel-collapse collapse" data-bs-parent="#accordion-main">
                    <div class="panel-body <%= text_color %>">
                      <%= list[index] %>
                    </div>
                  </div>
              </div>
              <!-- end tab content -->
            <% end %>
          </div>
          <!-- end accordion -->
      </div>
  </div>
</div>
