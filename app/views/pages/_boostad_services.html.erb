<%- boostad_services = BoostadService.all -%>
<div class="container bg-image padding-40px-tb border-radius-20 sm-no-border-radius" style="background-image:url('<%= image_url('bg-boostad-services.png') %>');">
  <div class="row justify-content-center align-items-center margin-20px-bottom wow animate__fadeIn">
    <div class="col-12 text-center">
      <h5 class="text-uppercase text-white-2 font-weight-600"><%= snippet.title %></h5>
    </div>
  </div>
  <div class="row justify-content-center">
      <div class="col-lg-12">
          <div class="row row-cols-1 row-cols-xl-2 row-cols-lg-2 row-cols-md-1 row-cols-sm-1 m-0">
            <% boostad_services.each_with_index do |service, index| %>
              <!-- start features box item -->
              <div class="col d-flex padding-10px-lr margin-20px-bottom wow animate__fadeInUp" data-wow-delay="0.<%= index + 1 %>s">
                <div class="h-100 w-100 transparent-box-solid d-flex align-items-center">
                  <div class="row">
                    <% if index <= 1 %>
                      <div class="col-12 col-md-6">
                        <h6 class="text-white-2 font-weight-600 mb-3" style="line-height:normal;"><%= service.title %></h6>
                        <p class="d-inline-block text-medium text-white-2 font-weight-400"><%= service.description %></p>
                      </div>
                      <div class="col-12 col-md-6 d-flex align-items-center">
                        <% if service.image.attached? %>
                          <%= image_tag service.image, class: "w-100" %>
                        <% else %>
                          <%= image_tag("boostad/boostad-#{index + 1}.png", class: "w-100") %>
                        <% end %>
                      </div>
                    <% else %>
                      <div class="col-12 col-md-6 d-flex align-items-center">
                        <% if service.image.attached? %>
                          <%= image_tag service.image, class: "w-100 sm-margin-20px-bottom" %>
                        <% else %>
                          <%= image_tag("boostad/boostad-#{index + 1}.png", class: "w-100 sm-margin-20px-bottom") %>
                        <% end %>
                      </div>
                      <div class="col-12 col-md-6">
                        <h6 class="text-white-2 font-weight-600 mb-3" style="line-height:normal;"><%= service.title %></h6>
                        <p class="d-inline-block text-medium text-white-2 font-weight-400"><%= service.description %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- end features box item -->
            <% end %>
          </div>
      </div>
  </div>
</div>
