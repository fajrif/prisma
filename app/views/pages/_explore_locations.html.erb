<%- header_tag = "h3" -%>
<%- header_tag = snippet.title_tag unless snippet.title_tag.blank? -%>

<div class="container">
  <div class="row align-items-end">
    <div class="col-md-4 order-2 order-md-1 text-center wow animate__fadeIn" data-wow-delay="0.3s">
      <%= content_tag(header_tag.to_sym, snippet.title, class: "font-weight-700") unless snippet.title.blank? %>
      <div class="w-100 sm-w-100">
        <% unless snippet.short_description.blank? %>
          <div class="info_short_desc last-paragraph-no-margin">
            <%= raw snippet.short_description %>
          </div>
        <% end %>
        <% snippet.link_buttons.each do |link_button| %>
          <div class="margin-20px-top">
            <%= render_link_text_url(link_button, "btn btn-medium btn-prisma btn-border btn-rounded margin-20px-bottom") %>
          </div>
        <% end %>
        <%= image_tag('prism.png', class: "w-40") %>
      </div>
    </div>
    <div class="col-md-8 order-1 order-md-2 sm-margin-30px-bottom text-center wow animate__fadeIn" data-wow-delay="0.2s">
      <%= image_tag(url_for(snippet.image)) %>
    </div>
	</div>
</div>
