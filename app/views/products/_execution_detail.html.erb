<section class="half-section pt-0 wow animate__fadeIn">
  <div class="container">
    <div class="row justify-content-start margin-50px-bottom sm-margin-25px-bottom">
      <div class="col-12 col-lg-6 sm-margin-30px-bottom wow animate__fadeIn">
        <%= image_tag(@product.image1, class: "w-100 border-radius-8") if @product.image1.attached? %>
      </div>
      <div class="col-12 col-lg-6 sm-margin-30px-bottom last-paragraph-no-margin wow animate__fadeIn">
        <div class="w-100 bg-gradient-light-red-light-orange transparent-box-solid margin-30px-bottom">
          <h6 class="font-weight-700 text-purple line-height-normal mb-2"><%= t('products.category') %></h6>
          <h6 class="d-block text-white-2 text-start text-md-end font-weight-600 mb-0">
            <%= blank_or_not @product.try(:product_category).try(:name) %>
          </h6>
        </div>
        <div class="w-100 bg-gradient-green transparent-box-solid margin-30px-bottom">
          <h6 class="font-weight-700 text-pink line-height-normal mb-2"><%= t('products.specification') %></h6>
          <h6 class="d-block text-white-2 text-start text-md-end font-weight-600 mb-0">
            <%= blank_or_not @product.specification %>
          </h6>
        </div>
        <div class="w-100 bg-gradient-purple transparent-box-solid margin-30px-bottom">
          <h6 class="font-weight-700 text-white line-height-normal mb-2"><%= t('products.est_impression') %></h6>
          <h6 class="d-block text-white-2 text-start text-md-end font-weight-600 mb-0">
            <%= blank_or_not @product.est_impression %>
          </h6>
        </div>
      </div>
    </div>

    <div class="row justify-content-start">
      <div class="col-12 col-lg-6 sm-margin-30px-bottom last-paragraph-no-margin wow animate__fadeIn">
        <div class="w-100 bg-gradient-purple transparent-box-solid margin-30px-bottom">
          <h6 class="font-weight-700 text-white-2 line-height-normal mb-2"><%= t('products.map') %></h6>
          <h6 class="d-block text-white-2 text-start text-md-end font-weight-500 mb-0">
            <%= blank_or_not @product.try(:map_coordinate) %>
          </h6>
        </div>
        <div class="w-100 bg-gradient-light-red-light-orange transparent-box-solid margin-30px-bottom">
          <h6 class="font-weight-700 text-purple line-height-normal mb-2"><%= t('products.address') %></h6>
          <p class="d-block text-white-2 text-start text-md-end text-large font-weight-500 mb-0">
            <%= blank_or_not @product.address %>
          </p>
        </div>
        <div class="w-100 bg-gradient-green transparent-box-solid margin-30px-bottom">
          <h6 class="font-weight-700 text-pink line-height-normal mb-2"><%= t('products.interest') %></h6>
          <p class="d-block text-white-2 text-start text-md-end text-large font-weight-500 mb-0">
            <%= blank_or_not @product.interest %>
          </p>
        </div>
      </div>
      <div class="col-12 col-lg-6 sm-margin-30px-bottom wow animate__fadeIn">
        <%= image_tag(@product.image2, class: "w-100 border-radius-8") if @product.image2.attached? %>
      </div>
    </div>

    <% unless @product.video_url.blank? %>
    <div class="row">
      <div class="col-12 col-lg-12 d-flex justify-content-center text-center padding-five-top wow animate__fadeIn">
        <div class="video-wrapper2">
          <!-- start youtube video -->
          <iframe
            src="<%= @product.video_url %>"
            title="<%= @product.name %>"
            frameborder="0"
            allowfullscreen
            ></iframe>
          <!-- end youtube video -->
        </div>
      </div>
    </div>
    <% end %>

  </div>
</section>
