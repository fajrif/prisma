<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Image</th>
				<th>Name</th>
				<th>Type</th>
				<th>Location</th>
				<th>Category</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for product in @products %>
				<tr>
					<td class="text-center"><%= product.id %></td>
					<td><%= image_tag(product.image.variant(resize_to_limit: [100,100])) if product.image.attached? %></td>
					<td><h5 class="fs-14 mb-0"><%= link_to product.name, admins_product_path(product.id), class: "text-primary" %></h5></td>
					<td>
						<span class="badge <%= product.digital? ? 'bg-primary' : 'bg-success' %>">
							<%= product.billboard_type_label %>
						</span>
					</td>
					<td><%= product.try(:location).try(:name) %></td>
					<td><%= product.try(:product_category).try(:name) %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_product_path(product.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_product_path(product.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_product_path(product.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @products %>
