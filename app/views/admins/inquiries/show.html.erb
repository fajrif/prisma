<% title_page("Investor Inquiry details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:15%;"><b>ID</b></td>
						<td><%= @inquiry.id %></td>
					</tr>
					<tr>
						<td><b>Company Name</b></td>
						<td><b><%= @inquiry.company_name %></b></td>
					</tr>
					<tr>
						<td><b>Name</b></td>
						<td><b><%= @inquiry.name %></b></td>
					</tr>
					<tr>
						<td><b>Email</b></td>
						<td><%= link_to @inquiry.email, "mailto:#{@inquiry.email}" %></td>
					</tr>
					<tr>
						<td><b>Phone</b></td>
						<td><%= @inquiry.phone %></td>
					</tr>
					<tr>
						<td><b>Message</b></td>
						<td><%= @inquiry.message %></td>
					</tr>
					<tr>
						<td><b>Created At</b></td>
						<td><%= @inquiry.created_at.strftime('%d/%m/%Y %H:%M') %></td>
					</tr>
				</table>
				<div class="form-actions">
					<%= link_to 'Destroy', admins_inquiry_path(@inquiry), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_inquiries_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
