<%= simple_form_for @award_category, url: (@award_category.new_record? ? admins_award_categories_path : admins_award_category_path(@award_category.id)), method: (@award_category.new_record? ? :post : :put) do |f| %>
	<%= f.error_notification %>
	<fieldset>
		<%= f.input :image, as: :file, input_html: { class: "mb-3", accept: "image/gif, image/png, image/jpg, image/jpeg, image/webp" } %>
		<%= f.input :name, as: :string %>
		<%= f.input :description, as: :text %>
	</fieldset>
	<%= f.error :base %>
	<div class="form-actions">
		<%= f.button :submit, :class => 'btn btn-secondary' %>
		<% unless @award_category.new_record? %>
			<%= link_to "Cancel", admins_award_category_path(@award_category.id), :class => 'btn btn-light' %>
		<% else %>
			<%= link_to "Cancel", admins_award_categories_path, :class => 'btn btn-light' %>
		<% end %>
	</div>
<% end %>
