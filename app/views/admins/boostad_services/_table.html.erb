<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Image</th>
				<th>Title</th>
				<th>Description</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			<% for boostad_service in @boostad_services %>
				<tr>
					<td class="text-center"><%= boostad_service.id %></td>
					<td>
						<% if boostad_service.image.attached? %>
							<%= image_tag boostad_service.image, style: "width: 100px; height: auto;" %>
						<% else %>
							<span class="text-muted">No image</span>
						<% end %>
					</td>
					<td><h5 class="fs-14 mb-0"><%= link_to boostad_service.name, admins_boostad_service_path(boostad_service.id), class: "text-primary" %></h5></td>
					<td><%= truncate(boostad_service.description, length: 30) %></td>
					<td class="text-center">
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_boostad_service_path(boostad_service.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_boostad_service_path(boostad_service.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_boostad_service_path(boostad_service.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @boostad_services %>
