<%= simple_form_for @location, url: (@location.new_record? ? admins_locations_path : admins_location_path(@location.id)), method: (@location.new_record? ? :post : :put) do |f| %>
	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<%= f.error_notification %>
          <fieldset>
            <%= f.input :image, as: :file, input_html: { class: "mb-3", accept: "image/png, image/jpg, image/jpeg, image/webp" } %>
            <%= f.input :name, as: :string %>
            <%= f.input :description, as: :text %>
					</fieldset>
					<%= f.error :base %>
					<div class="form-actions">
						<%= f.button :submit, :class => 'btn btn-secondary' %>
						<% unless @location.new_record? %>
							<%= link_to "Cancel", admins_location_path(@location.id), :class => 'btn btn-light' %>
						<% else %>
							<%= link_to "Cancel", admins_locations_path, :class => 'btn btn-light' %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<%= render "admins/shared/error_messages", :target => @location, col: 'col-lg-12' %>
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<h5 class="card-title mb-0">Settings</h5>
						</div>
						<div class="card-body">
							<%= f.association :banner_section, as: :select %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
