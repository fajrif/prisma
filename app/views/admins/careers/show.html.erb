<% title_page("Career Details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<div class="form-actions text-end">
					<%= link_to 'Edit', edit_admins_career_path(@career.id), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_career_path(@career.id), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_careers_path, :class => 'btn btn-light' %>
				</div>
				<div id="show-table">
          <%= render "details" %>
				</div>
			</div>
		</div>
	</div>
</div>
