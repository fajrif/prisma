<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Title</th>
				<th>Published Date</th>
				<th>Short Description</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for career in @careers %>
				<tr>
					<td class="text-center"><%= career.id %></td>
					<td>
						<h5 class="fs-14 mb-1"><%= link_to career.title, admins_career_path(career.id), class: "text-body" %></h5>
						<p class="text-muted mb-0">Location : <%= career.location %></p>
					</td>
					<td>
						<h5 class="fs-14 mb-1"><%= career.published_label %></h5>
						<p class="text-muted mb-0">Date : <%= career.published_date_label %></p>
					</td>
					<td><%= truncate_text(career.short_description, 80) %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_career_path(career.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_career_path(career.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_career_path(career.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @careers %>
