<%= simple_form_for @career, url: (@career.new_record? ? admins_careers_path : admins_career_path(@career.id)), method: (@career.new_record? ? :post : :put) do |f| %>
	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<%= f.error_notification %>
					<fieldset>
						<%= f.input :title, as: :string %>
            <%= f.input :file, as: :file, input_html: { class: "mb-3", accept: 'application/pdf, application/vnd.openxmlformats-officedocument.wordprocessingml.document, application/msword' } %>
						<%= f.input :short_description, as: :text %>
						<%= f.input :content, as: :rich_text_area %>
					</fieldset>
					<%= f.error :base %>
					<div class="form-actions">
						<%= f.button :submit, :class => 'btn btn-secondary' %>
						<% unless @career.new_record? %>
							<%= link_to "Cancel", admins_career_path(@career.id), :class => 'btn btn-light' %>
						<% else %>
							<%= link_to "Cancel", admins_careers_path, :class => 'btn btn-light' %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<%= render "admins/shared/error_messages", :target => @career, col: 'col-lg-12' %>
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<h5 class="card-title mb-0">Settings</h5>
						</div>
						<div class="card-body">
              <%= f.input :company_name, as: :string %>
              <%= f.input :location, as: :string %>
							<%= f.input :published_date, as: :string, input_html: { class: "datetimepicker", value: get_input_date_value(f.object.published_date) } %>
							<%= f.input :status, as: :select, collection: get_published_status, value_method: :first, label_method: :last %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>

<%= content_for :tail do %>
	<%= stylesheet_link_tag :actiontext, "data-turbo-track": "reload" %>
	<%= javascript_include_tag :trix %>
	<%= javascript_include_tag :actiontext %>
	<%= javascript_include_tag "trix_config.js" %>
<% end %>
