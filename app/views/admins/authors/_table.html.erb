<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Name</th>
				<th>Company Name</th>
				<th>Contact</th>
				<th>Created At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for author in @authors %>
				<tr>
					<td class="text-center"><%= author.id %></td>
					<td>
						<h5 class="fs-14 mb-0"><%= link_to author.name, admins_author_path(author.id), class: "text-body" %></h5>
						<p class="text-muted mb-0"><%= raw author.title %></p>
					</td>
					<td><%= author.company_name %></td>
					<td>
						<p class="text-muted mb-0"><%= author.phone %></p>
						<p class="text-muted mb-0"><%= author.email %></p>
					</td>
					<td><%= author.created_at.strftime('%d/%m/%Y %H:%M') %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_author_path(author.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_author_path(author.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_author_path(author.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @authors %>
