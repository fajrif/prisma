<%= simple_form_for [:admins, @author] do |f| %>
	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<%= f.error_notification %>
					<fieldset>
						<%= f.input :name %>
						<%= f.input :title %>
						<%= f.input :company_name %>
						<%= f.input :phone %>
						<%= f.input :email %>
					</fieldset>
					<%= f.error :base %>
					<div class="form-actions" style="margin-top:100px;">
						<%= f.button :submit, :class => 'btn btn-secondary' %>
						<% unless @author.new_record? %>
							<%= link_to "Cancel", admins_author_path(@author.id), :class => 'btn btn-light' %>
						<% else %>
							<%= link_to "Cancel", admins_authors_path, :class => 'btn btn-light' %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<%= render "admins/shared/error_messages", :target => @author, col: 'col-lg-12' %>
			</div>
		</div>
	</div>
<% end %>
