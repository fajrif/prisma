<%= simple_form_for [:admins, @award] do |f| %>
	<%= f.error_notification %>
	<fieldset>
		<%= f.input :image, as: :file, input_html: { class: "mb-3", accept: "image/gif, image/png, image/jpg, image/jpeg, image/webp" } %>
		<%= f.input :name, as: :string %>
    <%= f.input :description, input_html: { class: 'quill_container' } %>
	</fieldset>
	<%= f.error :base %>
  <div class="form-actions">
		<%= f.button :submit, :class => 'btn btn-secondary' %>
		<% unless @award.new_record? %>
			<%= link_to "Cancel", admins_award_path(@award), :class => 'btn btn-light' %>
		<% else %>
			<%= link_to "Cancel", admins_awards_path, :class => 'btn btn-light' %>
		<% end %>
	</div>
<% end %>

<%= content_for :tail do %>
	<script src="https://cdn.quilljs.com/1.1.9/quill.js"></script>
	<link href="https://cdn.quilljs.com/1.1.9/quill.snow.css" rel="stylesheet">
	<style>
		.award_description {
			margin-bottom: 100px !important;
		}
    .form-control.award_description-quill:not(.ql-container) {
      display: none;
    }
	</style>
<% end %>
