<%= simple_form_for [:admins, @gallery] do |f| %>
	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<%= f.error_notification %>
					<fieldset>
						<%= f.input :image, as: :file, input_html: { class: "mb-3", accept: "image/gif, image/png, image/jpg, image/jpeg" } %>
						<%= f.input :title, as: :string %>
						<%= f.input :caption, as: :string %>
						<%= f.input :video_url, as: :string %>
					</fieldset>
					<%= f.error :base %>
					<div class="form-actions">
						<%= f.button :submit, :class => 'btn btn-secondary' %>
						<% unless @gallery.new_record? %>
							<%= link_to "Cancel", admins_gallery_path(@gallery), :class => 'btn btn-light' %>
						<% else %>
							<%= link_to "Cancel", admins_galleries_path, :class => 'btn btn-light' %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<%= render "admins/shared/error_messages", :target => @gallery, col: 'col-lg-12' %>
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<h5 class="card-title mb-0">Settings</h5>
						</div>
						<div class="card-body">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
