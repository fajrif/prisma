<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">Order No</th>
				<th>Photo</th>
				<th>Full Name</th>
				<th>Job Title</th>
				<th>Member Type</th>
				<th>Created At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for member in @members %>
				<tr>
					<td class="text-center"><%= member.order_no %></td>
					<td><%= image_tag member.photo.variant(resize_to_limit: [100,100]) %></td>
					<td><h5 class="fs-14 mb-0"><%= link_to member.full_name, admins_member_path(member.id), class: "text-body" %></h5></td>
					<td><%= member.job_title %></td>
					<td><%= badge_member_type(member.try(:member_type)) %></td>
					<td><%= member.created_at.strftime('%d/%m/%Y %H:%M') %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_member_path(member.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_member_path(member.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_member_path(member.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @members %>
