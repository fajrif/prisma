<% title_page("Member details") %>
<div class="row">
	<div class="col-md-12 col-sm-12">
		<div class="card card-box">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:10%;"><b>ID</b></td>
						<td><%= @member.id %></td>
					</tr>
					<tr>
						<td><b>Order No</b></td>
						<td><%= @member.order_no %></td>
					</tr>
					<tr>
						<td><b>Photo</b></td>
						<td><%= image_tag @member.photo.variant(resize_to_limit: [100,100]) %></td>
					</tr>
					<tr>
						<td><b>Full Name</b></td>
						<td><h5 class="fs-14 mb-0 text-body"><%= @member.full_name %></h5></td>
					</tr>
					<tr>
						<td><b>Job Title</b></td>
						<td><%= @member.job_title %></td>
					</tr>
					<tr>
						<td><b>Member Type</b></td>
						<td><%= badge_member_type(@member.try(:member_type)) %></td>
					</tr>
					<tr>
						<td><b>Description</b></td>
						<td><%= raw @member.description %></td>
					</tr>
				</table>

				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_member_path(@member.id), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_member_path(@member.id), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_members_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
