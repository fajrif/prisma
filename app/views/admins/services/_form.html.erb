<%= simple_form_for @service, url: (@service.new_record? ? admins_services_path : admins_service_path(@service.id)), method: (@service.new_record? ? :post : :put) do |f| %>
	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<%= f.error_notification %>
          <fieldset>
					<%= f.input :name, as: :string %>
					<%= f.input :caption, as: :string %>
					<%= f.input :short_description, as: :text %>
					<%= f.input :description, as: :text %>
					<%= f.input :benefit_title, as: :string %>
					<%= f.input :benefit_description, as: :text %>
					</fieldset>
					<%= f.error :base %>
					<div class="form-actions">
						<%= f.button :submit, :class => 'btn btn-secondary' %>
						<% unless @service.new_record? %>
							<%= link_to "Cancel", admins_service_path(@service.id), :class => 'btn btn-light' %>
						<% else %>
							<%= link_to "Cancel", admins_services_path, :class => 'btn btn-light' %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<%= render "admins/shared/error_messages", :target => @service, col: 'col-lg-12' %>
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<h5 class="card-title mb-0">Settings</h5>
						</div>
						<div class="card-body">
              <label>Image</label>
              <%= f.input :image, as: :file, label: false, input_html: { class: "mb-3", accept: "image/png, image/jpg, image/jpeg" } %>
              <%= f.association :banner_section, as: :select %>
              <%= f.input :color, as: :string %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
