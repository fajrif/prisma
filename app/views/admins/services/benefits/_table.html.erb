<div class="table-card">
	<table class="table align-middle">
		<thead class="table-light">
			<tr>
				<th>ID</th>
				<th>Content</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			<% for b in @service.benefits %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.content %></td>
          <td class="text-center">
            <div class="dropdown">
              <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="ri-more-fill"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <%= link_to edit_admins_service_benefit_path(@service.id, b), :remote => true, class: "dropdown-item edit-list" do %>
                    <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
                  <% end %>
                </li>
                <li class="dropdown-divider"></li>
                <li>
                  <%= link_to admins_service_benefit_path(@service.id, b), :data => { :confirm => 'Are you sure?' }, :method => :delete, :remote => true, class: "dropdown-item remove-list" do %>
                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                  <% end %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
			<% end %>
		</tbody>
	</table>
</div>
