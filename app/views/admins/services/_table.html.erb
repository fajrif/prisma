<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Image</th>
				<th>Title</th>
				<th>Slug</th>
				<th>Banner Section</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for service in @services %>
				<tr>
					<td class="text-center"><%= service.id %></td>
					<td><%= image_tag service.image.variant(resize_to_limit: [50,50]) %></td>
					<td><h5 class="fs-14 mb-0"><%= link_to service.name, admins_service_path(service.id), class: "text-primary" %></h5></td>
					<td><%= link_to "/#{service.slug}", service_path(service), target: :_blank %></td>
					<td><b><%= service.try(:banner_section).try(:name_id_label) %></b></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_service_path(service.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_service_path(service.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_service_path(service.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @services %>
