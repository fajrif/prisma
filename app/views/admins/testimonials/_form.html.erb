<%= simple_form_for [:admins, @testimonial] do |f| %>
	<div class="row">
		<div class="col-lg-8">
			<div class="card">
				<div class="card-body">
					<%= f.error_notification %>
					<fieldset>
						<%= f.input :image, as: :file, input_html: { class: "mb-3", accept: "image/png, image/jpg, image/jpeg" } %>
						<%= f.input :company_name, as: :string %>
						<%= f.input :name, as: :string %>
						<%= f.input :title, as: :string %>
						<%= f.input :message, as: :text %>
					</fieldset>
					<%= f.error :base %>
					<div class="form-actions" style="margin-top:10px;">
						<%= f.button :submit, :class => 'btn btn-secondary' %>
						<% unless @testimonial.new_record? %>
							<%= link_to "Cancel", admins_testimonial_path(@testimonial), :class => 'btn btn-light' %>
						<% else %>
							<%= link_to "Cancel", admins_testimonials_path, :class => 'btn btn-light' %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="row">
				<%= render "admins/shared/error_messages", :target => @testimonial, col: 'col-lg-12' %>
			</div>
		</div>
	</div>
<% end %>
