<% title_page("Product Category details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:10%;"><b>ID</b></td>
						<td><%= @product_category.id %></td>
					</tr>
					<tr>
						<td><b>Name</b></td>
						<td><h5 class="fs-14 mb-0 text-body"><%= @product_category.name %></h5></td>
					</tr>
					<tr>
						<td><b>Product size</b></td>
						<td><%= @product_category.products.size %></td>
					</tr>
				</table>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_product_category_path(@product_category.id), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_product_category_path(@product_category.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_product_categories_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
