<% title_page("Member Type details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:10%;"><b>ID</b></td>
						<td><%= @member_type.id %></td>
					</tr>
					<tr>
						<td><b>Name</b></td>
						<td><h5 class="fs-14 mb-0 text-body"><%= @member_type.name %></h5></td>
					</tr>
					<tr>
						<td><b>Badge</b></td>
						<td><%= badge_member_type(@member_type) %></td>
					</tr>
					<tr>
						<td><b>Members</b></td>
						<td><%= @member_type.members.size %></td>
					</tr>
				</table>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_member_type_path(@member_type.id), :class => 'btn btn-secondary' %>
					<%= link_to 'Destroy', admins_member_type_path(@member_type.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => 'btn btn-danger' %>
					<%= link_to 'View All', admins_member_types_path, :class => 'btn btn-light' %>
				</div>
			</div>
		</div>
	</div>
</div>
