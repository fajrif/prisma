<table class="table table-hover">
	<tr>
		<td style="width:15%;"><b>ID</b></td>
		<td><%= @innovation.id %></td>
	</tr>
	<tr>
		<td><b>Title</b></td>
		<td><h5 class="fs-14 mb-0 text-body"><%= @innovation.name %></h5></td>
	</tr>
	<tr>
		<td><b>Description</b></td>
		<td><%= @innovation.description %></td>
	</tr>
	<tr>
		<td><b>Icon</b></td>
		<td>
			<%= image_tag("icon-innovations/#{@innovation.icon}", height: 40, style: "background-color:#8e8e8e") if @innovation.icon.present? %>
			<span class="ms-2"><%= @innovation.icon %></span>
		</td>
	</tr>
	<tr>
		<td><b>Link</b></td>
		<td>
			<% if @innovation.link.present? %>
				<%= link_to @innovation.link, @innovation.link, target: "_blank" %>
			<% else %>
				-
			<% end %>
		</td>
	</tr>
</table>
<div class="form-actions">
  <%= link_to 'Edit', edit_admins_innovation_path(@innovation.id), :class => 'btn btn-secondary' %>
  <%= link_to 'Destroy', admins_innovation_path(@innovation.id), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
  <%= link_to 'View All', admins_innovations_path, :class => 'btn btn-light' %>
</div>
