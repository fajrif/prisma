<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Title</th>
				<th>Description</th>
				<th>Icon</th>
				<th>Link</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			<% for innovation in @innovations %>
				<tr>
					<td class="text-center"><%= innovation.id %></td>
					<td><h5 class="fs-14 mb-0"><%= link_to innovation.name, admins_innovation_path(innovation.id), class: "text-primary" %></h5></td>
					<td><%= truncate(innovation.description, length: 30) %></td>
					<td><%= innovation.icon %></td>
					<td><%= truncate(innovation.link, length: 20) if innovation.link.present? %></td>
					<td class="text-center">
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_innovation_path(innovation.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li>
									<%= link_to edit_admins_innovation_path(innovation.id), class: "dropdown-item edit-list" do %>
										<i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_innovation_path(innovation.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @innovations %>
