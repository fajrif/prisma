<%= simple_form_for [:admins, @portfolio] do |f| %>
	<%= f.error_notification %>
	<fieldset>
		<%= f.input :image, as: :file, input_html: { class: "mb-3", accept: "image/gif, image/png, image/jpg, image/jpeg" } %>
		<%= f.input :name %>
		<%= f.input :company_name %>
		<%= f.association :page, as: :select %>
		<%= f.input :description, input_html: { class: 'quill_container' } %>
	</fieldset>
	<%= f.error :base %>
	<div class="form-actions" style="margin-top:100px;">
		<%= f.button :submit, :class => 'btn btn-secondary' %>
		<% unless @portfolio.new_record? %>
			<%= link_to "Cancel", admins_portfolio_path(@portfolio), :class => 'btn btn-light' %>
		<% else %>
			<%= link_to "Cancel", admins_portfolios_path, :class => 'btn btn-light' %>
		<% end %>
	</div>
<% end %>

<%= content_for :tail do %>
	<script src="https://cdn.quilljs.com/1.1.9/quill.js"></script>
	<link href="https://cdn.quilljs.com/1.1.9/quill.snow.css" rel="stylesheet">
<% end %>
