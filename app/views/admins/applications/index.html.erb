<% title_page("Applications") %>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-header border-0">
				<%= form_tag admins_applications_url, { :id => "index_search", :method => :get } do %>
					<div class="row g-4 align-items-center">
						<div class="col-md-4">
							<div class="form-icon">
								<%= text_field_tag :search, params[:search], :class => "form-control form-control-icon", :placeholder => "Search applicant name ..." %>
								<i class="ri-search-line"></i>
							</div>
						</div>
					</div>
				<% end %>
			</div>
			<div id="index_table" class="card-body">
				<%= render 'table' %>
			</div>
		</div>
	</div>
	<!--end col-->
</div>
<!--end row-->
