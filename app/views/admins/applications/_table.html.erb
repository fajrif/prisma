<div class="table-card">
	<table class="table table-hover table-striped align-middle mb-0">
		<thead class="table-light">
			<tr>
				<th class="text-center">ID</th>
				<th>Name</th>
				<th>Position</th>
				<th>CV / Resume</th>
				<th>Applied Date</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for application in @applications %>
				<tr>
					<td class="text-center"><%= application.id %></td>
					<td>
						<h5 class="fs-14 mb-1"><%= link_to application.name, admins_application_path(application.id), class: "text-body" %></h5>
						<p class="text-muted mb-1">Email : <%= application.email %></p>
						<p class="text-muted mb-0">Phone : <%= application.phone %></p>
					</td>
					<td><%= link_to application.try(:career).try(:title), admins_career_path(application.try(:career)) %></td>
          <td>
            <%= link_to(application.file.filename, url_for(application.file), target: :_blank) if application.file.attached? %>
          </td>
					<td><%= application.applied_date_label %></td>
					<td>
						<div class="dropdown">
							<button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ri-more-fill"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li>
									<%= link_to admins_application_path(application.id), class: "dropdown-item" do %>
										<i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
									<% end %>
								</li>
								<li class="dropdown-divider"></li>
								<li>
									<%= link_to admins_application_path(application.id), :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "dropdown-item remove-list" do %>
										<i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
									<% end %>
								</li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<!-- pagination -->
<%= paginate @applications %>
